{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "@repo/db#build": {
      "outputs": []
    },
    "@repo/types#build": {
      "outputs": []
    },
    "@repo/sports-data#build": {
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": { "dependsOn": ["^typecheck"] },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
